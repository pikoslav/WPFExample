<Application x:Class="WPFExample.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFExample"
             xmlns:viewmodels="clr-namespace:WPFExample.ViewModels"
             xmlns:views="clr-namespace:WPFExample.Views"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <DataTemplate DataType="{x:Type viewmodels:AuthorsViewModel}">
      <views:AuthorsView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewmodels:AuthorViewModel}">
      <views:AuthorView/>
    </DataTemplate>
  </Application.Resources>
</Application>
